                    .header Mietbeginn*
                    input(type="date").native
                    .header Mietende*
                    input(type="date").native
                .col-sm-6.col-md-6.col-lg-6
                    .header Mietdauer*
                    select.native
                        option Unbefristet
                    .header Umstand/Begründung*
